{
    "extends": ["tslint:recommended"],
    "jsRules": {
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ],
        "class-name": true,
        "no-console": false,
        "no-debugger": true,
        "no-arg": true,
        "no-invalid-this": true,
        "no-shadowed-variable": true,
        "no-var-keyword": true,
        "use-isnan": true,
        "cyclomatic-complexity": [true, 20],
        "max-classes-per-file": [true, 1],
        "max-file-line-count": [true, 400],
        "max-line-length": [true, 120],
        "no-consecutive-blank-lines": [true, 2],
        "no-default-export": true,
        "object-literal-sort-keys": false,
        "prefer-const": true,
        "no-conditional-assignment": true,
        "curly": true,
        "arrow-return-shorthand": [true],
        "object-literal-shorthand": true,
        "one-variable-per-declaration": [true, "ignore-for-loop"],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore",
            "allow-trailing-underscore",
            "allow-pascal-case"
        ],
        "comment-format": [true, "check-space"],
        "indent": [true, "spaces"],
        "align": [true, "parameters"],
        "no-eval": true,
        "no-trailing-whitespace": true,
        "no-unsafe-finally": true,
        "one-line": [true, "check-open-brace", "check-whitespace", "check-catch", "check-else", "check-finally"],
        "quotemark": [true, "single", "jsx-double"],
        "semicolon": [true, "always", "ignore-bound-class-methods"],
        "triple-equals": [true],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type",
            "check-module"
        ]
    },
    "rules": {
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ],
        "member-access": [false, "check-accessor", "check-constructor"],
        "member-ordering": [
            true,
            {
                "order": [
                    "public-static-field",
                    "protected-static-field",
                    "private-static-field",
                    "public-instance-field",
                    "protected-instance-field",
                    "private-instance-field",
                    "constructor",
                    "public-instance-method",
                    "protected-instance-method",
                    "private-instance-method"
                ]
            }
        ],
        "no-any": false,
        "no-empty-interface": true,
        "interface-name": [false, "never-prefix"],
        "no-internal-module": true,
        "no-var-requires": false,
        "typedef": [true, "call-signature", "parameter", "arrow-parameter", "property-declaration"],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "object-literal-sort-keys": false,
        "class-name": true,
        "no-console": false,
        "no-debugger": true,
        "no-arg": true,
        "no-invalid-this": true,
        "no-shadowed-variable": false,
        "no-var-keyword": true,
        "use-isnan": true,
        "cyclomatic-complexity": [true, 60],
        "max-classes-per-file": [true, 1],
        "max-file-line-count": [true, 400],
        "max-line-length": [true, 120],
        "no-consecutive-blank-lines": [true, 2],
        "no-default-export": false,
        "prefer-const": true,
        "array-type": [true, "array"],
        "no-conditional-assignment": true,
        "curly": true,
        "arrow-return-shorthand": [true],
        "no-angle-bracket-type-assertion": true,
        "object-literal-shorthand": true,
        "one-variable-per-declaration": [true, "ignore-for-loop"],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore",
            "allow-trailing-underscore",
            "allow-pascal-case"
        ],
        "comment-format": [true, "check-space"],
        "indent": [true, "spaces"],
        "align": [true, "parameters"],
        "no-eval": true,
        "no-trailing-whitespace": true,
        "no-unsafe-finally": true,
        "one-line": [true, "check-open-brace", "check-whitespace", "check-catch", "check-else", "check-finally"],
        "quotemark": [true, "single", "jsx-double"],
        "semicolon": [true, "always", "ignore-bound-class-methods"],
        "triple-equals": [true],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type",
            "check-module"
        ],
        "ordered-imports": false
    },
    "linterOptions": {
        "exclude": [
            "./Makefile",
            "./src/shared/graphql/schema/api.graphql",
            "./sonar-project.properties",
            "node_modules"
        ]
    }
}
